; Hello World, written in OPHIS 6502 Assembly

; Start of ROM
.org $4020
.outfile "../hello.rom"
.include "stdlib.oph"

start:
    jsr print

    ldx #64
loop:
    inx
    txa
    .invoke printChar
    cmp #90
    bne loop

    lda #10
    .invoke printChar
end:
    brk

hello: .byte "Hello World!", 10, 0


; NMI Vector
.advance $FFFA
.word end

; RESET Vector
.advance $FFFC
.word start

; IRQ Vector
.advance $FFFE
.word end